/* pages/my/index.wxss */
.container{
  background-color: #f2f2f2;
  width: 100%;
  height: 100vh;
  
}
.user-info{
  padding-top: 60rpx;
  background-color: #fff;
}
.user-info .img image{
  height: 180rpx;
  width: 180rpx;
  border-radius:50%; 
  margin: 30rpx auto 40rpx;
  box-shadow: 0 0 20rpx rgba(0,0,0,0.2);
  display: block;
}
.user-info .user-name{
  text-align: center;
  padding: 30rpx 0;
  width: 100%;
  display: block;
}
.my-wallet{
  padding: 40rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  margin-top:40rpx;
  align-items: center; 
}
.btn-login{
  width: 90%;
  bottom: 60px;
  position: absolute;
  left: 5%;
}